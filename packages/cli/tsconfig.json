{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "declarationDir": "./dist/types",
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "Node16",
    "moduleResolution": "Node16",
    "paths": {
      "@action-builder/core": ["../core/src"],
      "@action-builder/shared": ["../shared/src"],
      "@action-builder/types": ["../types/src"]
    },
    "jsx": "react-jsx",
    "exactOptionalPropertyTypes": false
  },
  "include": ["src"]
}
