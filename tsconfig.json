{
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig to read more about this file */
    "baseUrl": ".",
    "paths": {
      "@k-rf/action-builder-cli": ["./packages/cli/src/index.ts"],
      "@k-rf/action-builder-core": ["./packages/core/src/index.ts"],
      "@k-rf/action-builder-shared": ["./packages/shared/src/index.ts"],
      "@k-rf/action-builder-types": ["./packages/types/src/index.ts"]
    },
    "allowJs": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "exactOptionalPropertyTypes": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "skipLibCheck": true
  },
  "include": ["./*.ts", "./packages/**/*.ts"],
  "exclude": ["**/*.spec.ts", "**/dist", "**/node_modules"],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
